import express from "express";
import Ticket from "../models/ticketModel"; // 티켓 모델 불러오기

const router = express.Router();

router.get("/ticket/detail", async (req, res) => {
  const ssotoken = req.headers.authorization || req.query.ssotoken;

  if (!ssotoken) {
    return res.status(400).json({
      isSuccess: false,
      code: "ERROR-0001",
      message: "SSO 토큰이 없습니다.",
      result: [],
    });
  }

  try {
    // DB에서 티켓 데이터 조회
    const tickets = await Ticket.find(
      {},
      "eventTitle eventDay eventTime eventPlace eventComment eventPlaceComment -_id"
    );

    return res.status(200).json({
      isSuccess: true,
      code: "SUCCESS-0000",
      message: "요청에 성공하였습니다.",
      result: tickets,
    });
  } catch (error) {
    return res.status(500).json({
      isSuccess: false,
      code: "ERROR-0002",
      message: "서버 오류",
      result: [],
    });
  }
});

export default router;
